<%- include('../partials/header'); %>
<div class="container">
  <div class="row">
      <div class="col">
          <h1 class="mt-5">System Register:</h1>
          <form action="/system/add" method="POST">
              <div class="form-group">
                  <label for="inputName">Full name:</label>
                  <input class="form-control" type="text" id="name" name="name" required>
              </div>
              <div class="form-group">
                  <label for="class">E-mail:</label>
                  <input class="form-control" type="text" id="email" name="email">
              </div>
              <div class="form-group">
                  <label for="g1">Phone number:</label>
                  <input class="form-control" type="text" id="phone" name="phone">
              </div>

              <button class="btn btn-primary" onclick="formValidation(event)" type="submit">Add interest</button>
          </form>
      </div>
  </div>
</div>
  <%- include('../partials/footer'); %>